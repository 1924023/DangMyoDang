<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#F6F0F0"
    tools:context=".careActivity">

    <Button
        android:id="@+id/food"
        android:layout_width="375dp"
        android:layout_height="138dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_gradientt"
        android:fontFamily="@font/font1"
        android:text="반려견이 먹으면 안되는 음식물"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="21sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.965" />

    <Button
        android:id="@+id/medic"
        android:layout_width="375dp"
        android:layout_height="138dp"
        android:layout_marginTop="520dp"
        android:background="@drawable/bg_gradientt"
        android:fontFamily="@font/font1"
        android:text="반려견 응급처치"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="21sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/disease"
        android:layout_width="375dp"
        android:layout_height="138dp"
        android:layout_marginTop="184dp"
        android:background="@drawable/bg_gradientt"
        android:fontFamily="@font/font1"
        android:text="반려견의 질병"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="21sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/vaccination"
        android:layout_width="375dp"
        android:layout_height="138dp"
        android:layout_marginTop="344dp"
        android:background="@drawable/bg_gradientt"
        android:fontFamily="@font/font1"
        android:text="애견 예방접종"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="21sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.965" />

</androidx.constraintlayout.widget.ConstraintLayout>